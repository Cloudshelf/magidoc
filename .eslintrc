{
  "parser": "@typescript-eslint/parser",
  "plugins": ["svelte3", "@typescript-eslint"],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "project": ["**/*/tsconfig.json"],
    "extraFileExtensions": [".svelte"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "settings": {
    "svelte3/typescript": true
  },
  "extends": ["plugin:prettier/recommended"]
}
