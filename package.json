{
  "name": "magidoc",
  "version": "0.1.1",
  "description": "MagiDoc is a documentation website generator for GraphQL based on Svelte and that allows for infinite customization through plugins.",
  "repository": "git@github.com:pelletier197/magidocql.git",
  "author": "Sunny Pelletier",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build-ci": "pnpm -r --filter './packages/plugins' build && pnpm -r install && pnpm -r --filter '!./packages/plugins' build",
    "test": "run-p test:*",
    "test-ci": "run-s test:unit test:prettier",
    "test:lint": "eslint '**/src/**/*.{ts,svelte}'",
    "test:prettier": "prettier --check '**/*.ts' '**/*.svelte'",
    "test:unit": "pnpm --filter {packages} -r run test",
    "fix": "run-p fix:*",
    "fix:prettier": "prettier --write '**/*.ts' '**/*.svelte'",
    "fix:lint": "eslint --fix '**/src/**/*.{ts,svelte}'",
    "patch": "pnpm version patch && VERSION=$(pnpm --silent get-version) && pnpm -r exec pnpm version --no-git-tag-version $VERSION",
    "minor": "pnpm -r exec pnpm version --no-git-tag-version minor",
    "major": "pnpm -r exec pnpm version --no-git-tag-version major",
    "get-version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.6.0",
    "svelte": "^3.46.6",
    "typescript": "^4.6.3"
  }
}
