{
  "name": "@magidoc/cli",
  "description": "A CLI application responsible for generating starter projects for a GraphQL API",
  "private": false,
  "version": "0.2.0",
  "type": "module",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "start": "pnpm build:esbuild && cd build && node index.js",
    "build": "run-p build:*",
    "build:esbuild": "esbuild --minify --format=esm --target=node12 --outdir=build `find ./src  -name '*.ts'`",
    "build:tsc": "tsc --build tsconfig.build.json",
    "test": "jest",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "commander": "^9.1.0",
    "pkginfo": "^0.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/pkginfo": "^0.4.0",
    "esbuild": "^0.14.34",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
